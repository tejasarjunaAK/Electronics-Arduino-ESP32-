//arduino2
#include <LiquidCrystal.h>
LiquidCrystal lcd(8,7,6,5,4,3);

int trigPin=12;
int echoPin=11;
int angle=0;
void setup(){
  pinMode(trigPin,OUTPUT);
  pinMode(echoPin,INPUT);
  lcd.begin(16,2);
  lcd.print("Hi");
  delay(1000);
  Serial.begin(115200);
}
void loop(){
  digitalWrite(trigPin,LOW);
  delayMicroseconds(2);
  digitalWrite(trigPin,HIGH);
  delayMicroseconds(10);
  digitalWrite(trigPin,LOW);
  double duration=pulseIn(echoPin,HIGH);
  double distance= duration*0.0343/2;
  lcd.setCursor(0,0);
  lcd.print(distance);
  if(Serial.available()){
    angle=Serial.parseInt();}
  lcd.setCursor(0,1);
  lcd.print("                          ");
  lcd.setCursor(0,1);
  lcd.print(angle);
  delay(100);}
//arduino1
#include <Servo.h>
Servo myservo;
void setup(){
  myservo.attach(6);
  Serial.begin(115200);}
void loop(){
  for(int i=0;i<180;i+=10){
    myservo.write(i);
    Serial.println(i);
    delay(100);
  }
  for(int i=180;i>0;i-=10){
    myservo.write(i);
    Serial.println(i);
    delay(100);}}
 
